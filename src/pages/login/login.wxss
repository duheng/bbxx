.login-container {
  padding: 20px;
}

.input {
  border: 1px solid #ddd;
  font-size: 32rpx;
  padding: 0 10px;
  line-height: 44px;
  height: 44px;
  margin: 20px 0;
}

.input-placeholder {
  color: #aaa!important;
}

.login-btn {
  margin: 20px 0;
  border: 1px solid #ccc!important;
  color: #777!important;
  width: 100%;
  border-radius: 10rpx;
  font-size: 32rpx!important;
  line-height: 44px!important;
  height: 44px;
}

.register {
  color: #998c90;
  font-size: 12px;
}

.btn-hover {
  background-color: #eee!important;
}
