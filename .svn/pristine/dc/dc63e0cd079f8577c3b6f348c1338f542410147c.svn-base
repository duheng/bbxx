.navbar {
    display: flex;
    position: absolute;
    z-index: 500;
    top: 0;
    width: 100%;
    border-bottom: 1rpx solid #CCCCCC;
}

.navbar__item {
    position: relative;
    display: block;
    flex: 1;
    padding: 13px 0;
    text-align: center;
    font-size: 0;

    &.tpl-bar__item_on {
        color: $red;
    }
}
.navbar__slider {
    position: absolute;
    content: " ";
    left: 0;
    bottom: 0;
    width: 6em;
    height: 3px;
    background-color: $red;
    transition: transform .3s;
}
.navbar__title{
    display: inline-block;
    font-size: $fontSize;
    max-width: 8em;
    @extend %ellipsis;
}