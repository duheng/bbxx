@import "./style/base/_reset.scss";
/**app.wxss**/
page{
    min-height: 100%;
}
.container {
  height: 100%;
  box-sizing: border-box;
  color:#222;
}
.border-bottom{
    border-bottom: 1px solid #efefef;
}
/*底部固定的添加按钮*/
.tabbar-button{
    position: fixed;
    width:100%;
    height:112rpx;
    line-height:112rpx;
    border-top:1rpx solid #9a9a9a;
    bottom:0;
    left:0;
    background-color:rgba(247,247,247,.96);
    text-align: center;
}
.tabbar-text-add{
    display: inline-block;
    font-size: 32rpx;
    color: #000;
    margin: 31rpx auto;
    height: 50rpx;
    line-height: 50rpx;
    padding-left: 50rpx;
    background:url("https://s.geilicdn.com/weidian_lite/v1.0.0/images/item/add.png") left 5rpx no-repeat;
    background-size:40rpx;
    text-align: center;
}

/*列表页面没数据时的错误提示样式*/
.container-block-err{
    color:#9a9a9a;
    font-size: 32rpx;
    width: 100%;
    height: 300rpx;
    line-height: 300rpx;
    text-align: center;
}
/*弹出对话框*/
.win-mask{
    position: fixed;
    top:0;
    left:0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.3);
    z-index: 100;
}
.win-container{
    position: absolute;
    top:0;
    left:0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: 200;
    display: flex;
    align-items: center;
    align-content: center;
    text-align: center;
}
.win-form{
    position: relative;
    width: 450rpx;
    background: #fff;
    padding: 30rpx 25rpx;
    margin: 0 auto;
    border-radius: 8rpx;
    z-index: 111;
}
.win-form-icon{
    position: absolute;
    top:-12rpx;
    right: -5rpx;
    width:40rpx;
    height:40rpx;
    z-index: 222;
}
.win-form-textarea{
    width: 420rpx;
    border: 1rpx solid #989898 !important;
    border-radius: 5rpx;
    height: 280rpx;
    line-height: 24rpx;
    text-align: left;
    font-size: 28rpx;
    padding: 10rpx 15rpx;
    margin-bottom: 15rpx;
}
.win-form-tip{
    font-size: 24rpx;
    color: #7f7f7f;
    line-height: 28rpx;
    margin: 10rpx auto;
    text-align: left;
}
.win-form-footer{
    width: 100%;
    overflow: hidden;
}
.win-form-submit{
    font-size: 30rpx;
    width: 50%;
    text-align: center;
    color: #fff!important;
    margin: 25rpx auto 40rpx;
    background: #C60A1E!important;
}

.ellipsis{
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.button-disabled{
    color:rgba(255, 255, 255, 0.5)!important;
}

.navigator-hover {
    background:rgba(255, 255, 255, 0);
}

/*全局动画样式开始*/
.animated {
    -webkit-animation-duration: 1s;
    animation-duration: 1s;
    -webkit-animation-fill-mode: both;
    animation-fill-mode: both;
}

@-webkit-keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}
.fadeIn {
    -webkit-animation-name: fadeIn;
    animation-name: fadeIn;
}


@-webkit-keyframes rotate{
    0%{
        -webkit-transform:rotate(0deg);
    }
    100%{
        -webkit-transform:rotate(360deg);
    }
}
@keyframes rotate{
    0%{
        transform:rotate(0deg);
    }
    100%{
        transform:rotate(360deg);
    }
}
.rotate{
    -webkit-animation:rotate 2s infinite linear;
    animation:rotate 2s infinite linear;
}
/*全局动画样式结束*/
